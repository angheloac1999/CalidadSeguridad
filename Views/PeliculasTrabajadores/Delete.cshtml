@model peliculasweb.Models.PeliculaTrabajador

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash"></i> Eliminar Película-Trabajador</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">¿Estás seguro de que quieres eliminar esto?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Pelicula)
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Pelicula?.Titulo (@Model.PeliculaId)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Trabajador)
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Trabajador?.Nombre (@Model.TrabajadorId)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="PeliculaId" />
                        <input type="hidden" asp-for="TrabajadorId" />
                        <button type="submit" class="btn btn-danger me-2"><i class="fas fa-trash"></i> Eliminar</button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la
                        Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>