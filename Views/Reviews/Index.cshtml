@model IEnumerable<peliculasweb.Models.Review>

@{
    ViewData["Title"] = "Reviews";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-danger">Reviews</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Crear Nueva Review
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-img-top bg-warning d-flex align-items-center justify-content-center text-white"
                        style="height: 150px;">
                        <i class="fas fa-star fa-3x"></i>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.NombreUsuario</h5>
                        <p class="card-text">
                            @for (int i = 0; i < item.Puntuacion; i++)
                            {
                                <i class="fas fa-star text-warning"></i>
                            }
                            @for (int i = item.Puntuacion; i < 5; i++)
                            {
                                <i class="far fa-star text-warning"></i>
                            }
                            (@item.Puntuacion/5)
                        </p>
                        <p class="card-text">@(item.Comentario?.Length > 200 ? item.Comentario.Substring(0, 200) + "..." :
                                                    item.Comentario)</p>
                        <p class="card-text text-muted">Película: @item.Pelicula?.Titulo</p>
                        <p class="card-text text-muted">@item.Fecha.ToString("dd/MM/yyyy")</p>
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.Id"
                                class="btn btn-outline-primary btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                                class="btn btn-outline-danger btn-sm">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>