@model peliculasweb.Models.Actor

@{
    ViewData["Title"] = "Eliminar Actor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">¿Estás seguro de que quieres eliminar este actor?</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImagenRuta))
                            {
                                <img src="@Model.ImagenRuta" class="img-fluid rounded mb-3" alt="Imagen de @Model.Nombre" style="max-height: 200px;">
                            }
                            else
                            {
                                <div class="bg-secondary d-flex align-items-center justify-content-center text-white rounded mb-3" style="height: 200px;">
                                    <i class="fas fa-user fa-3x"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Nombre:</dt>
                                <dd class="col-sm-8">@Model.Nombre</dd>

                                <dt class="col-sm-4">Biografía:</dt>
                                <dd class="col-sm-8">@Model.Biografia</dd>

                                <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                                <dd class="col-sm-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">Nacionalidad:</dt>
                                <dd class="col-sm-8">@Model.Nacionalidad</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</div>