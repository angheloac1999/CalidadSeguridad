@model IEnumerable<peliculasweb.Models.Actor>

@{
    ViewData["Title"] = "Actores";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Actores</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Crear Nuevo Actor
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.ImagenRuta))
                    {
                        <img src="@item.ImagenRuta" class="card-img-top" alt="Imagen de @item.Nombre"
                            style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white"
                            style="height: 250px;">
                            <i class="fas fa-user fa-3x"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text text-muted">@item.Nacionalidad</p>
                        <p class="card-text">@(item.Biografia?.Length > 100 ? item.Biografia.Substring(0, 100) + "..." :
                                                    item.Biografia)</p>
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.Id"
                                class="btn btn-outline-primary btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                                class="btn btn-outline-danger btn-sm">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>