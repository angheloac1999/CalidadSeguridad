@model IEnumerable<peliculasweb.Models.Pelicula>

@{
    ViewData["Title"] = "Películas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Películas</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Crear Nueva Película
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-4 p-3 bg-light rounded">
        <div class="row">
            <div class="col-md-4">
                <label for="searchString" class="form-label">Buscar por Título:</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
            </div>
            <div class="col-md-4">
                <label for="generoId" class="form-label">Filtrar por Género:</label>
                <select name="generoId" class="form-control">
                    <option value="">Todos los Géneros</option>
                    @if (ViewData["Generos"] is SelectList generos)
                    {
                        foreach (var genero in generos)
                        {
                            <option value="@genero.Value" selected="@(ViewData["GeneroId"]?.ToString() == genero.Value)">
                                @genero.Text
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Filtrar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
            </div>
        </div>
    </form>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.ImagenRuta))
                    {
                        <img src="@item.ImagenRuta" class="card-img-top" alt="Imagen de @item.Titulo"
                            style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white"
                            style="height: 250px;">
                            <i class="fas fa-film fa-3x"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Titulo</h5>
                        <p class="card-text text-muted">@item.Genero?.Nombre</p>
                        <p class="card-text">@(item.Sinopsis?.Length > 100 ? item.Sinopsis.Substring(0, 100) + "..." :
                                                    item.Sinopsis)</p>
                        <p class="card-text"><small class="text-muted">Director: @item.Director?.Nombre</small></p>
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.Id"
                                class="btn btn-outline-primary btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                                class="btn btn-outline-danger btn-sm">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>