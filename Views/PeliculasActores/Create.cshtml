@model peliculasweb.Models.PeliculaActor

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-plus"></i> Crear Película-Actor</h4>
                </div>
                <div class="card-body">
                    <form id="createForm" asp-action="Create">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="PeliculaId" class="control-label"></label>
                            <select asp-for="PeliculaId" class="form-control" asp-items="ViewBag.PeliculaId"></select>
                            <span asp-validation-for="PeliculaId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ActorId" class="control-label"></label>
                            <select asp-for="ActorId" class="form-control" asp-items="ViewBag.ActorId"></select>
                            <span asp-validation-for="ActorId" class="text-danger"></span>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-arrow-left"></i> Volver a la
                        Lista</a>
                    <button type="submit" form="createForm" class="btn btn-success"><i class="fas fa-save"></i>
                        Crear</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}