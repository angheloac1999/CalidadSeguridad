@model peliculasweb.Models.PeliculaActor

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Editar Película-Actor</h4>
                </div>
                <div class="card-body">
                    <form id="editForm" asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PeliculaId" />
                        <input type="hidden" asp-for="ActorId" />
                        <p class="text-muted">Esta relación no tiene campos editables adicionales.</p>
                    </form>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-arrow-left"></i> Volver a la
                        Lista</a>
                    <button type="submit" form="editForm" class="btn btn-warning"><i class="fas fa-save"></i> Guardar
                        Cambios</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}