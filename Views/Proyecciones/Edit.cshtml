@model peliculasweb.Models.Proyeccion

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Editar Proyección</h4>
                </div>
                <div class="card-body">
                    <form id="editForm" asp-action="Edit">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mb-3">
                            <label asp-for="FechaInicio" class="control-label"></label>
                            <input asp-for="FechaInicio" class="form-control" type="datetime-local" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaFin" class="control-label"></label>
                            <input asp-for="FechaFin" class="form-control" type="datetime-local" />
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PeliculaId" class="control-label"></label>
                            <select asp-for="PeliculaId" class="form-control" asp-items="ViewBag.PeliculaId"></select>
                            <span asp-validation-for="PeliculaId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CineId" class="control-label"></label>
                            <select asp-for="CineId" class="form-control" asp-items="ViewBag.CineId"></select>
                            <span asp-validation-for="CineId" class="text-danger"></span>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-arrow-left"></i> Volver a la
                        Lista</a>
                    <button type="submit" form="editForm" class="btn btn-warning"><i class="fas fa-save"></i> Guardar
                        Cambios</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}