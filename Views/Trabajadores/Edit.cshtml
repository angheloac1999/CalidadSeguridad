@model peliculasweb.Models.Trabajador

@{
    ViewData["Title"] = "Editar Trabajador";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-edit"></i> Editar Trabajador
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Rol" class="form-label"></label>
                            <input asp-for="Rol" class="form-control" />
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Biografia" class="form-label"></label>
                            <textarea asp-for="Biografia" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Biografia" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FechaNacimiento" class="form-label"></label>
                            <input asp-for="FechaNacimiento" class="form-control" type="date" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Nacionalidad" class="form-label"></label>
                            <input asp-for="Nacionalidad" class="form-control" />
                            <span asp-validation-for="Nacionalidad" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Imagen</label>
                            <input type="file" asp-for="ImagenArchivo" name="ImagenArchivo" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.ImagenRuta))
                            {
                                <div class="mt-2">
                                    <img src="@Model.ImagenRuta" alt="Imagen actual" class="img-fluid rounded"
                                        style="max-height: 200px;">
                                </div>
                            }
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Guardar" class="btn btn-warning btn-lg" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}