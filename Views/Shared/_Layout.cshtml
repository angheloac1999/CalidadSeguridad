<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - peliculasweb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/peliculasweb.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-film me-2"></i>Películas Web
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item mx-2">
                            <a class="nav-link px-3 py-2 rounded-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                                asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link px-3 py-2 rounded-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Actores" ? "active" : "")"
                                asp-area="" asp-controller="Actores" asp-action="Index">
                                <i class="fas fa-user me-1"></i>Actores
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link px-3 py-2 rounded-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Peliculas" ? "active" : "")"
                                asp-area="" asp-controller="Peliculas" asp-action="Index">
                                <i class="fas fa-film me-1"></i>Películas
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link px-3 py-2 rounded-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Cines" ? "active" : "")"
                                asp-area="" asp-controller="Cines" asp-action="Index">
                                <i class="fas fa-building me-1"></i>Cines
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link px-3 py-2 rounded-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Trabajadores" ? "active" : "")"
                                asp-area="" asp-controller="Trabajadores" asp-action="Index">
                                <i class="fas fa-users me-1"></i>Trabajadores
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link px-3 py-2 rounded-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Generos" ? "active" : "")"
                                asp-area="" asp-controller="Generos" asp-action="Index">
                                <i class="fas fa-tags me-1"></i>Géneros
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link px-3 py-2 rounded-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Proyecciones" ? "active" : "")"
                                asp-area="" asp-controller="Proyecciones" asp-action="Index">
                                <i class="fas fa-calendar-alt me-1"></i>Proyecciones
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link px-3 py-2 rounded-pill @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")"
                                asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacidad
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - peliculasweb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>