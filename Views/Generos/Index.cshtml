@model IEnumerable<peliculasweb.Models.Genero>

@{
    ViewData["Title"] = "Géneros";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-danger">Géneros</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Crear Nuevo Género
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-img-top bg-primary d-flex align-items-center justify-content-center text-white" style="height: 250px;">
                        <i class="fas fa-tags fa-3x"></i>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">@(item.Descripcion?.Length > 150 ? item.Descripcion.Substring(0, 150) + "..." : item.Descripcion)</p>
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
