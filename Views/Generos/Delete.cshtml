@model peliculasweb.Models.Genero

@{
    ViewData["Title"] = "Eliminar Género";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-trash"></i> Eliminar Género
                    </h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">¿Estás seguro de que quieres eliminar este género?</h4>
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="bg-primary d-flex align-items-center justify-content-center text-white rounded mb-3"
                                style="height: 200px;">
                                <i class="fas fa-tags fa-4x"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Nombre:</dt>
                                <dd class="col-sm-8">@Model.Nombre</dd>
                                <dt class="col-sm-4">Descripción:</dt>
                                <dd class="col-sm-8">@Model.Descripcion</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="btn btn-danger btn-lg" />
                    </form>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>